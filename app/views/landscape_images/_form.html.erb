<div class="container">
	<div class="form-group col-lg-6 col-lg-offset-3">
		<%= form_for @landscape_image do |f| %>
		  <%= render "shared/errors", object: @landscape_image %>
			
			<div class="input-group">
				<div class="col-lg-4">
			  		<%= f.label :project_id, class: "control-label" %>
			  	</div>
			  	<div class="col-lg-8">
			  		<%= f.collection_select :project_id, Project.all, :id, :name, class: "form-control" %>
			  	</div>
			</div>	 

			<div class="input-group">
				<div class="col-lg-4">
			  		<%= f.label :title, class: "control-label" %>
				</div>
				<div class="col-lg-8">
			  		<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>

			<div class="input-group">
        		<span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
        		<%= f.file_field :image, class: "form-control" %>
      		</div>

			<div class="col-lg-12">
				<div class="col-lg-4">
					<% if @landscape_image.image_data? %>
	    				Remove attachment:
	    		</div>
				<div class="col-lg-8">
	    				 <%= f.check_box :remove_image, class: "form-control" %>
					<% end %>
				</div>
			</div>

			<div class="btn-lg">
			  <%= f.submit %>
			</div>


			<% end %>
		</div>
	</div>

	

