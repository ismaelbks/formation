<div class="container">
  <div class="col-md-offset-3 col-md-6 col-sm-12">
    <h1 class="homepage-h1">Inscription</h1>

    <%= form_for(resource, as: resource_name, url: "/users") do |f| %>
      <%= devise_error_messages! %>

      <div class="field col-sm-12">
        <%= f.label :firstname %><br />
        <%= f.text_field :firstname, autofocus: true, class: "col-xs-12" %>
      </div>

      <div class="field col-sm-12">
        <%= f.label :lastname %><br />
        <%= f.text_field :lastname, class: "col-xs-12" %>
      </div>

      <div class="field col-sm-12">
        <%= f.label :birthdate %><br />
        <%= f.date_field :birthdate, class: "col-xs-12" %>
      </div>

      <div class="field col-sm-12">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "col-xs-12" %>
      </div>      

      <div class="field col-sm-12">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "col-xs-12"%>
      </div>

      <div class="field col-sm-12">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-12" %>
      </div>

      <div class=" col-sm-12">
        <%= f.submit "Sign up", class: "btn-submit" %>
      </div>
    <% end %>
        
      <div class="shared-links">
          <%= render "devise/shared/links" %>
      </div>

  </div>
</div>



