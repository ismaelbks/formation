<div class="container">
	<div class="form-horizontal">
		<%= form_for @project do |f| %>
		  <%= render "shared/errors", object: @project %>

			<div class="form-group">
		  		<%= f.label :name, class: "control-label col-sm-2" %>
		  		<div class="col-sm-10">
			  		<%= f.text_field :name, class: "form-control" %>
			  	</div>
			</div>

			<div class="form-group">
			  	<%= f.label :short_description, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
			  		<%= f.text_area :short_description, size: "10x3", class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
			  	<%= f.label :long_description, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
					<%= f.text_area :long_description, size: "10x6", class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
			  	<%= f.label :collect_amount_goal, class: "control-label col-sm-2" %>
				<div class="col-sm-10">
			  		<%= number_field(:collect_amount_goal, :price, in: 20..15000, step: 10) %>
				</div>
			</div>				

			<div class="form-group inline-group vertical-centered">
			  	<%= f.label :landscape, class: "control-label col-sm-2" %>
				<div class="col-md-6 child-vertical-centered">
					<div class="input-group ">
	        			<span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
	        			<%= f.file_field :landscape, class: "form-control" %>
	        		</div>
	      		</div>
				<% if @project.landscape_data? %>
				<div class="col-md-4 child-vertical-centered">
					<div class="checkbox vertical-centered">
						<%= f.label :remove_landscape do %>
								 <%= f.check_box :remove_landscape, class: "form-control child-vertical-centered" %>
							Supprimer l'image?
						<% end %>
					</div>
				</div>
				<% end %>
			</div>

			<div class="form-group inline-group">
			  	<%= f.label :portrait, class: "control-label col-sm-2" %>
				<div class="col-md-6">
					<div class="input-group">
	        			<span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
	        			<%= f.file_field :portrait, class: "form-control" %>
	        		</div>
	      		</div>
				<% if @project.portrait_data? %>
				<div class="col-md-4">
					<div class="checkbox">
						<%= f.label :remove_portrait do %>
								 <%= f.check_box :remove_portrait, class: "form-control" %>
							Supprimer l'image?
						<% end %>
					</div>
				</div>
				<% end %>
			</div>			

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-3">
					<div class="checkbox">
						<%= f.label :display do %>
								 <%= f.check_box :display, class: "form-control" %>
							Afficher le projet ?
						<% end %>
		    		</div>
				</div>
				<div class="col-sm-6">
					<%= f.submit 'Enregistrer', :class => 'btn btn-primary btn-lg btn-toosm' %>
				</div>	
			</div>

		

			<div class="form-group">

			</div>


			<% end %>
		</div>
</div>