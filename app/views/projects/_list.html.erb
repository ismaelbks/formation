	<div class= "row">
		<% @projects.each do |project| %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail project-box">
						<% if project.portrait_data? %>
							<%= image_tag project.portrait_url(:portrait), class: "img-responsive" %>
								<% if project.status == "en cours" %>
									<span class="label label-primary">En cours</span>
								<% elsif project.status == "succés" %>
									<span class="label label-success">Réussi</span>
								<% elsif project.status == "échec" %>
									<span class="label label-warning">Echec</span>
								<% else %>
									<span class="label label-default">Brouillon</span>
							<% end %>
						<% end %>
						<h2 class="project-name"><%= project.name %></h2>
						<p class="project-short-describe"><%= project.short_description %></p>
						<%= link_to "Plus d'information", project_url(project), class: "btn btn-primary nav-justified" %>
					</div>

				</div>
		<% end %>
	</div>