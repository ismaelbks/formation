<div class="container">
	<div class="col-lg-12">
		<h1 class="col-md-12 well"><%= @project.name %></h1>
	</div>

	<div class="container">
		
		<div class="col-lg-6">
			<div class="image">
				<% if @project.landscape_data? %>
					<%= image_tag @project.landscape_url(:landscape), class: "img-responsive" %>
				<% end %>
			</div>
		</div>

		<div class="col-lg-6">
			<h4 class="col-lg-12">Objectif: <%=@project.collect_amount_goal%> â‚¬</h4>
			<div class="col-lg-12" style="padding-top:1em;">
				<p><strong>Le projet en quelques mots : </strong></p>
				<p><%= @project.short_description %></p>
			</div>

			<div class="col-lg-12" style="padding-top:1em;" >
				<p><strong>Tout savoir sur le projet :</strong></p>
				<p><%= @project.long_description %></p>
			</div>
			<div class="col-lg-6">
				<%= link_to 'Modifier projet', edit_project_path(@project), class: 'btn btn-primary' %>
			</div>			
		</div>

	</div>
</div>